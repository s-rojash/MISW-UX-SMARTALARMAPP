<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="231dp"
        android:layout_height="131dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/_183523172_e78e0bb4_2a49_4f95_85bf_7694c2325fff" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="318dp"
        android:layout_height="325dp"
        android:background="@drawable/esquinas_layout"
        android:backgroundTint="@color/cafe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="306dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="18dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:paddingTop="35dp"
                android:paddingBottom="5dp"
                android:text="Usuarios:"
                android:textColor="@android:color/white"
                android:textSize="9pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="261dp"
                android:layout_height="48dp"
                android:background="@drawable/esquinas_text"
                android:ems="10"
                android:textColor="@android:color/black"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:text="Contraseña:"
                android:textColor="@android:color/white"
                android:textSize="9pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="263dp"
                android:layout_height="48dp"
                android:background="@drawable/esquinas_text"
                android:ems="10"
                android:textColor="@android:color/black"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text=" " />

            <Button
                android:id="@+id/button"
                android:layout_width="257dp"
                android:layout_height="58dp"
                android:background="@drawable/esquinas_btn_naranja"
                android:onClick="abrirNavegador"
                android:text="Inicar Sesión"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHint="#F44336"
                android:textSize="9pt" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>